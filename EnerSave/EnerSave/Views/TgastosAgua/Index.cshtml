@model IEnumerable<ConsultasMVC.Entities.GastosAguaEntity>

@{
    ViewData["Title"] = "Index";
}

<h2>Gastos de Água</h2>
<h5>Abaixo são exibidos os gastos com água cadastrados.</h5>
<hr />
<br />

<p>
    <a asp-action="Create">
        <input type="submit" value="Novo Gasto de Água" class="btn btn-default">
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Metros Cúbicos (m3)
            </th>
            <th>
                Data de Leitura
            </th>
            <th>
                Usuário
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MetrosCubicos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Periodo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-sm">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-sm">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-sm">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Grafico">
    <button type="button" class="btn btn-sm">
        <span>Gráfico</span>
    </button>
</a>