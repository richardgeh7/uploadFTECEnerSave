@model IEnumerable<ConsultasMVC.dbenersave.TgastosEnergia>

@{
    ViewData["Title"] = "Index";
}

<h2>Gastos de Energia</h2>
<h5>Abaixo são exibidos os gastos com energia cadastrados.</h5>
<br />

<p>
    <a asp-action="Create">
       <input type="submit" value="Novo Gasto de Energia" class="btn btn-default">
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Kilowatts(kWh)
            </th>
            <th>
                Valor(R$)
            </th>
            <th>
                Período
            </th>
            <th>
                Usuário
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kilowatts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <button type="button" class="btn btn-sm">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <button type="button" class="btn btn-sm">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <button type="button" class="btn btn-sm">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="Grafico">
    <button type="button" class="btn btn-sm">
        <span>Gráfico KWH</span>
    </button>
</a>

<a asp-action="Real">
    <button type="button" class="btn btn-sm">
        <span>Gráfico R$</span>
    </button>
</a>