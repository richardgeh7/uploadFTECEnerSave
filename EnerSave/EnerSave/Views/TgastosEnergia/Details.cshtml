@model ConsultasMVC.Entities.GastosEnergiaEntity

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes do Gastos de Luz</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Consumo(kWh)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Kwh)
        </dd>
        <dt>
            Valor
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt>
            Período:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Periodo)
        </dd>
        <dt>
            Usuário:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
        <br />
    </dl>
</div>
