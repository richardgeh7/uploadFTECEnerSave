@model ConsultasMVC.Entities.GastosEnergiaEntity


@{
    ViewData["Title"] = "Edit";
}

<h2>Atualização do gasto de luz</h2>
<h5>Informe os dados necessários abaixo para efetuar a atualização dos dados.</h5>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Kwh" class="control-label"> Consumo(kWh)</label>
                <input asp-for="Kwh" type="number" class="form-control" />
                <span asp-validation-for="Kwh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"> Valor</label>
                <input asp-for="Valor" type="number" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label">Período</label>
                <input asp-for="Periodo" type="date" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Usuário</label>
                <input asp-for="UsuarioId" type="hidden" value="@EnerSave.Dominio.LoginSingleton.Instance.IdUsuario" />
                <input disabled class="form-control" value="@EnerSave.Dominio.LoginSingleton.Instance.Usuario" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
