@model EnerSave.Views.ViewModels.GastosEnergiaViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastro de Gastos de Luz</h2>
<h5>Informe abaixo os dados necessários para o registro do gasto de luz no período.</h5>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kwh" class="control-label">Consumo(kWh)</label>
                <input asp-for="Kwh" type="number" class="form-control" required />
                <span asp-validation-for="Kwh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor</label>
                <input asp-for="Valor" type="number" class="form-control" required />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label">Data da Leitura</label>
                <input asp-for="Periodo" type="date" class="form-control" required/>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label">Usuário</label>
                <input asp-for="UsuarioId" type="hidden" value="@EnerSave.Dominio.LoginSingleton.Instance.IdUsuario" />
                <input disabled class="form-control" value="@EnerSave.Dominio.LoginSingleton.Instance.Usuario" />
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>

         <style>
            input:focus:invalid 
           {
                border: red 1px solid;
            }
        </style>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
